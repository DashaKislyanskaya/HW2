package com.daria;

import java.util.Scanner;

public class HelloTest {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		System.out.println("Введите высоту ");
		int i = sc.nextInt();

		for (int j = 0; j < i; j++) {
			for (int m = 0; m <= j; m++) {
				System.out.print("*");
			}
			System.out.print("\n");
		}

		for (int n = i - 1; n > 0; n--) {
			for (int m = 0; m < n; m++) {
				System.out.print("*");
			}
			System.out.print("\n");
		}
	}
}
